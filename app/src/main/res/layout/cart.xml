<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg1">

    <RelativeLayout
        android:id="@+id/cartlayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_marginBottom="20dp">


        <ImageView
            android:id="@+id/cartLogo"
            android:src="@drawable/cartlogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="85dp"
            android:layout_marginStart="85dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/cart"
            android:layout_width="110dp"
            android:layout_marginLeft="10dp"
            android:text="Your Cart "
            android:textColor="#0000FF"
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="25dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/cartLogo"/>

    </RelativeLayout>



    <RelativeLayout

        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_below="@+id/text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">>


                <ImageView
                    android:id="@+id/img"
                    android:src="@drawable/img"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:id="@+id/txtDesc"
                    android:layout_width="95dp"
                    android:layout_marginLeft="10dp"
                    android:text="iPhone7"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img"/>

                <TextView
                    android:id="@+id/txtPrice"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="1000 $"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtDesc"/>


                <TextView
                    android:id="@+id/txtDisc"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="5 %"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtPrice"/>

                <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/txtDisc"
                    android:id="@+id/chkbox"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl2"
                android:layout_below="@id/rl1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">>


                <ImageView
                    android:id="@+id/img1"
                    android:src="@drawable/img1"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:id="@+id/txtDesc1"
                    android:layout_width="95dp"
                    android:layout_marginLeft="10dp"
                    android:text="S8 Plus"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img1"/>

                <TextView
                    android:id="@+id/txtPrice1"
                    android:layout_width="78dp"
                    android:layout_marginLeft="10dp"
                    android:text="900 $"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtDesc1"/>


                <TextView
                    android:id="@+id/txtDisc1"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="5 %"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtPrice1"/>

                <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/txtDisc1"
                    android:id="@+id/chkbox1"/>

            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/rl3"
                android:layout_below="@id/rl2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/img2"
                    android:src="@drawable/img2"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="30dp"/>

                <TextView
                    android:id="@+id/txtDesc2"
                    android:layout_width="95dp"
                    android:layout_marginLeft="10dp"
                    android:text="LG G6"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img2"/>

                <TextView
                    android:id="@+id/txtPrice2"
                    android:layout_width="78dp"
                    android:layout_marginLeft="10dp"
                    android:text="900 $"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtDesc2"/>


                <TextView
                    android:id="@+id/txtDisc2"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="5 %"
                    android:layout_marginTop="20dp"
                    android:textStyle="bold"
                    android:textSize="25dp"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/txtPrice2"/>

                <CheckBox
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/txtDisc2"
                    android:id="@+id/chkbox2"/>

            </RelativeLayout>


            <Button
                android:id="@+id/viewstore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Stores"
                android:textColor="#fff"
                android:background="#395DD6"
                android:textSize="25dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/rl3"/>

            <Button
                android:id="@+id/prtopay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Proceed to Pay"
                android:textColor="#fff"
                android:background="#3FB63C"
                android:textSize="25dp"
                android:padding="5dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp"
                android:layout_below="@+id/viewstore"/>

        </RelativeLayout>

    </RelativeLayout>


</LinearLayout>